<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eraky.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.eraky.myapplication.AllCategoryActivity">
        </activity>
        <activity android:name="com.example.eraky.myapplication.CategoryActivity">
        </activity>
        <activity android:name="com.example.eraky.myapplication.ProductActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.eraky.myapplication.RangeActivity" />
        </activity>
        <activity android:name="com.example.eraky.myapplication.OneProductActivity" />
        <activity android:name="com.example.eraky.myapplication.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity android:name="com.example.eraky.myapplication.RangeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.eraky.myapplication.AllCategoryActivity" />
        </activity>
        <activity android:name="com.example.eraky.myapplication.MainActivity" />
        <activity android:name="com.example.eraky.myapplication.MyFavouActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.eraky.myapplication.AllCategoryActivity" />
        </activity>
    </application>

</manifest>